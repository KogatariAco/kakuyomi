{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "strict": true,
    "noLib": false,
    "sourceMap": false,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "./lib"
  },
  "files": [
    "./src/index.ts",
    "./src/cli.ts"
  ]
}
